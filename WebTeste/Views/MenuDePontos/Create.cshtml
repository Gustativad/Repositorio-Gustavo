@model WebTeste.Models.MenuDePontos

@{
    ViewData["Title"] = "Menu De Pontos";
}

<h1>Menu de Pontos</h1>

<h4>Registre a sua pontuação logo abaixo:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Jogador" class="control-label"></label>
                <input asp-for="Jogador" class="form-control" />
                <span asp-validation-for="Jogador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inserir_Data" class="control-label"></label>
                <input asp-for="Inserir_Data" class="form-control" />
                <span asp-validation-for="Inserir_Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inserir_Pontuação" class="control-label"></label>
                <input asp-for="Inserir_Pontuação" class="form-control" />
                <span asp-validation-for="Inserir_Pontuação" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar a página anterior</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
