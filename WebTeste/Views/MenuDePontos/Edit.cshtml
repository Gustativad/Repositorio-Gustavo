@model WebTeste.Models.MenuDePontos

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Edição de dados</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="Inserir_Nome" class="control-label"></label>
                <input asp-for="Inserir_Nome" class="form-control" />
                <span asp-validation-for="Inserir_Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inserir_Data" class="control-label"></label>
                <input asp-for="Inserir_Data" class="form-control" />
                <span asp-validation-for="Inserir_Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inserir_Pontuação" class="control-label"></label>
                <input asp-for="Inserir_Pontuação" class="form-control" />
                <span asp-validation-for="Inserir_Pontuação" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar a página anterior</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
